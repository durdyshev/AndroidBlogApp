<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".Login">
    <EditText
        android:id="@+id/login_email"
        android:layout_width="311dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/login_parol"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="180dp"
        android:ems="10"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textColorHint="@color/common_google_signin_btn_text_dark_default"
        app:layout_constraintBottom_toTopOf="@+id/login_parol"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/login_parol"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/login_gir_knopka"
        android:layout_alignEnd="@+id/login_email"
        android:layout_marginBottom="16dp"
        android:ems="10"
        android:hint="@string/parol"
        android:inputType="textWebPassword"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textColorHint="@color/common_google_signin_btn_text_dark_default"
        app:layout_constraintBottom_toTopOf="@+id/login_gir_knopka"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/login_gir_knopka"
        android:layout_width="349dp"
        android:layout_height="52dp"
        android:layout_above="@+id/reg_knopka"
        android:layout_alignEnd="@+id/reg_knopka"
        android:layout_marginBottom="133dp"
        android:background="@color/colorAccent"
        android:text="@string/gir"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/reg_knopka"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/reg_knopka"
        android:layout_width="357dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp"
        android:text="@string/registrasiya"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ProgressBar
        android:id="@+id/login_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/login_gir_knopka"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/reg_knopka"
        android:progressBackgroundTint="@color/common_google_signin_btn_text_dark_pressed" />
</android.support.constraint.ConstraintLayout>